<div class = "jumbotron jumbotron-fluid title-jumbotron py-3">
    <div class = "container">
        <div class = "row justify-content-center">
            <div class = "col-auto mx-auto transparent">
                <h1 class = "display-4">eat da burger!</h1>
            </div>
        </div>
    </div>
</div>
<div class = "container">
    <div class = "row justify-content-center">
        <div class = "col-12 col-md-5 transparent-2 m-2">
            <h2>burgers yet to be eaten!</h2>
            <hr>
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                            {{> burger-block isDevoured=true}}
                    {{/unless}}
                {{/each}}
            </ul>
            <hr>
            <form class = "burger-form">
                <div class = "form-inline">
                    <button type = "submit" class = "btn btn-secondary mr-3">Add a Burger</button>
                    <input type = "text" id = "burger-name" class = "form-control" name = "name">
                </div>
                <span id = "warning-message"></span>
            </form>
        </div>
        <div class = "col-12 col-md-5 transparent-2 m-2">
            <h2>burgers i has eaten.</h2>
            <hr>
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                            {{> burger-block isDevoured=false}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>